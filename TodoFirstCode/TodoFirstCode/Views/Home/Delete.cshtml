@model TodoFirstCode.Models.TableTasksModel
@{
    ViewBag.Title = "Delete";
}

<h2>Удалить задачу</h2>

<h3>Вы уверены в этом?</h3>
<div>
    <h4>Данные задачи</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Статус
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt>
            Задача
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TaskName)
        </dd>

        <dt>
            Примечания
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TaskNotes)
        </dd>

        <dt>
            Дата создания
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TimeCreate)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("К списку", "Index")
        </div>
    }
</div>
